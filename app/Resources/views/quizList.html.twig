{% block header %}
    {{ include('header.html.twig') }}
{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('css/Quizzes.css') }}" />
    <div id="grad">
        <p class="www">Quizzes</p>
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Leader</th>
                <th>Users</th>
                <th>Date of creating</th>
            </tr>
            </thead>
            <tbody>
            {% for quiz in quiz %}
                <tr>
                    <td>{{ quiz.name }}</td>
                    <td>{{ quiz.block }}</td>
                    <td>{{ quiz.leaderFirst }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block footer %}
    {{ include('footer.html.twig') }}
{% endblock %}