<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
</head>
<body>
{% block header %}
    {{ include('header.html.twig') }}
{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('css/AddQuestion.css') }}" />
    <div id="grad">
        <form class="answers">
        <img src="{{ asset('bundles/science.png') }}" class="image1"/>
            {{ form_start(form) }}
            {{ form_row(form.question) }}
            <button type="submit">Save</button>
            {{ form_end(form) }}
            <div class="answers1">
                <p>
                    <input type="radio" class="radio" id="radio" name="radio">
                    <label for="radio">Answer1</label>
                </p>
                <p>
                    <input type="radio" class="radio" id="radio" name="radio">
                    <label for="radio">Answer2</label>
                </p>
                <p>
                    <input type="radio" class="radio" id="radio" name="radio">
                    <label for="radio">Answer3</label>
                </p>
                <p>
                    <input type="radio" class="radio" id="radio" name="radio">
                    <label for="radio">Answer4</label>
                </p>
            </div>
        </form>
    </div>
{% endblock %}
{% block footer %}
    {{ include('footer.html.twig') }}
{% endblock %}
</body>
</html>









