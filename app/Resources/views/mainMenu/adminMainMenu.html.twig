<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
</head>
<body>
{% block header %}
    {{ include('adminHeader.html.twig') }}
{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('css/AdminMainMenu.css') }}" />
    <div id="grad">
        <p class="www">Welcome, {{ app.user.username }}!</p>
        <form>
            <input list="Quizzes" class="quizzes" placeholder=" Please, select a quiz">
            <datalist id="Quizzes">
                {% for quiz in quiz %}
                    <option value="{{ quiz.name }}">
                {% endfor %}
            </datalist>
        </form>
        <a href="{{ url('userQuizPage') }}" id="start" class="button">Start</a>
        <a href="{{ url('adminAddQuiz') }}" id="add" class="button">Add</a>
        <a id="edit" class="button">Edit</a>
        <a id="delete" class="button">Delete</a>
    </div>
{% endblock %}
{% block footer %}
    {{ include('footer.html.twig') }}
{% endblock %}
</body>
</html>